{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "projectId": {
      "type": "string"
    },
    "projectName": {
      "type": "string"
    },
    "orchestratorIdentity": {
      "type": "string"
    },
    "providerIdentities": {
      "type": "array",
      "defaultValue": [
      ]
    }
  },
  "variables": {
    "vaultName": "[concat('tc', uniqueString(parameters('projectId')))]",
    "empty": {
    },
    "copy": {
      "name": "accessPoliciesCopy",
      "count": "[length(parameters('providerIdentities'))]",
      "mode": "serial",
      "batchSize": 1
    }
  },
  "resources": [
    {
      "type": "Microsoft.KeyVault/vaults",
      "name": "[variables('vaultName')]",
      "apiVersion": "2018-02-14",
      "location": "[resourceGroup().location]",
      "properties": {
        "enabledForDeployment": false,
        "enabledForTemplateDeployment": false,
        "enabledForVolumeEncryption": false,
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "tenantId": "[subscription().tenantId]",
        "accessPolicies": [
          {
            "tenantId": "[subscription().tenantId]",
            "objectId": "[parameters('orchestratorIdentity')]",
            "permissions": {
              "keys": [
                "all"
              ],
              "secrets": [
                "all"
              ],
              "certificates": [
                "all"
              ],
              "storage": [
                "all"
              ]
            }
          }
        ]
      }
    },
    {
      "condition": "[not(empty(parameters('providerIdentities')))]",
      "name": "[concat(deployment().name, '-AP', copyIndex())]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults',variables('vaultName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "condition": "[not(empty(parameters('providerIdentities')))]",
              "name": "[concat(variables('vaultName'), '/add')]",
              "type": "Microsoft.KeyVault/vaults/accessPolicies",
              "apiVersion": "2018-02-14",
              "location": "[resourceGroup().location]",
              "properties": {
                "accessPolicies": [
                  {
                    "tenantId": "[subscription().tenantId]",
                    "objectId": "[parameters('providerIdentities')[copyIndex()]]",
                    "permissions": {
                      "keys": [
                        "get",
                        "list"
                      ],
                      "secrets": [
                        "get",
                        "list"
                      ],
                      "certificates": [
                        "get",
                        "list"
                      ],
                      "storage": [
                        "get",
                        "list"
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      "accessPoliciesCopy": "[if(not(empty(parameters('providerIdentities'))), variables('accessPoliciesCopy'), variables('empty'))]"
    }
  ],
  "outputs": {
    "vaultId": {
      "type": "string",
      "value": "[resourceId('Microsoft.KeyVault/vaults', variables('vaultName'))]"
    },
    "vaultName": {
      "type": "string",
      "value": "[variables('vaultName')]"
    },
    "vaultUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.KeyVault/vaults', variables('vaultName')), '2018-02-14').vaultUri]"
    }
  }
}
