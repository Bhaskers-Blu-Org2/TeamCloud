{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "projectId": {
      "type": "string"
    },
    "projectName": {
      "type": "string"
    },
    "projectPrefix": {
      "type": "string"
    },
    "resourceGroupName": {
      "type": "string",
      "defaultValue": "[concat(parameters('projectPrefix'), replace(parameters('projectName'), ' ', '_'), '_', uniqueString(parameters('projectId')))]"
    },
    "resourceGroupLocation": {
      "type": "string"
    },
    "orchestratorIdentity": {
      "type": "string"
    },
    "providerIdentities": {
      "type": "array"
    },
    "_artifactsLocation": {
      "type": "string",
      "defaultValue": ""
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "defaultValue": ""
    }
  },
  "variables": {
    "projectResourcesDeployment": "[concat(deployment().name, '-', 'ProjectResources')]",
    "sharedResourcesDeployment": "[concat(deployment().name, '-', 'SharedResources')]",
    "sharedResourceGroupName": "[concat('TeamCloud-', toUpper(replace(parameters('resourceGroupLocation'), ' ', '')))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2018-05-01",
      "location": "[parameters('resourceGroupLocation')]",
      "name": "[variables('sharedResourceGroupName')]",
      "properties": {
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "name": "[variables('sharedResourcesDeployment')]",
      "resourceGroup": "[variables('sharedResourceGroupName')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', variables('sharedResourceGroupName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(uri(parameters('_artifactsLocation'), 'SharedResources.json'), parameters('_artifactsLocationSasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "projectId": {
            "value": "[parameters('projectId')]"
          },
          "projectName": {
            "value": "[parameters('projectName')]"
          },
          "orchestratorIdentity": {
            "value": "[parameters('orchestratorIdentity')]"
          },
          "providerIdentities": {
            "value": "[parameters('providerIdentities')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2018-05-01",
      "location": "[parameters('resourceGroupLocation')]",
      "name": "[parameters('resourceGroupName')]",
      "tags": {
        "hidden-TeamCloud.ProjectId": "[parameters('projectId')]",
        "hidden-TeamCloud.ProjectName": "[parameters('projectName')]"
      },
      "properties": {
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "name": "[variables('projectResourcesDeployment')]",
      "resourceGroup": "[parameters('resourceGroupName')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/', parameters('resourceGroupName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(uri(parameters('_artifactsLocation'), 'ProjectResources.json'), parameters('_artifactsLocationSasToken'))]",
          "contentVersion": "1.0.0.0"
        }
      }
    }
  ],
  "outputs": {
    "resourceGroupId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Resources/resourceGroups/', parameters('resourceGroupName'))]"
    },
    "resourceGroupName": {
      "type": "string",
      "value": "[parameters('resourceGroupName')]"
    },
    "vaultId": {
      "type": "string",
      "value": "[reference(variables('sharedResourcesDeployment')).outputs.vaultId.value]"
    },
    "vaultName": {
      "type": "string",
      "value": "[reference(variables('sharedResourcesDeployment')).outputs.vaultName.value]"
    },
    "vaultUrl": {
      "type": "string",
      "value": "[reference(variables('sharedResourcesDeployment')).outputs.vaultUrl.value]"
    }
  }
}
